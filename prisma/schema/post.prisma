model Post {
  id         String     @id @default(uuid())
  title      String     @db.VarChar(225)
  content    String     @db.Text
  thumbnail  String?
  isFeatured Boolean    @default(false)
  status     PostStatus @default(PUBLISHED)

  tags      String[]
  views     Int      @default(0)
  authorId  String // it will manage by better auth
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  comments Comment[]

  // database it will saved as posts

  @@index([authorId])
  @@map("posts")
}

enum PostStatus {
  DRAFT
  PUBLISHED
  ARCHIVED
}